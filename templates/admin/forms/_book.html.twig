{% import _self as formMacros %}

{% macro printBookTags(genusScientistForm) %}
   <div class="col-span-12 xl:col-span-3 js-genus-scientist-item">
        <a href="#" class="js-remove-scientist pull-right">
            <span class="fa fa-close"></span>
        </a>
        {{ form_errors(genusScientistForm) }}

            {% if genusScientistForm.tag is defined %}
                <div class="col-span-4">
                    {{ form_label(genusScientistForm.tag) }}
                    <div class="mt-2">
                        {{ form_widget(genusScientistForm.tag) }}
                    </div>
                    <div class="text-theme-6 mt-2"> {{ form_errors(genusScientistForm.tag) }}</div>
               </div>
        {% endif %}

       <div class="col-span-4">
       <div>
                {{ form_label(genusScientistForm.createdAt) }}
                <div class="mt-2">
                    {{ form_widget(genusScientistForm.createdAt) }}
                </div>
                <div class="text-theme-6 mt-2"> {{ form_errors(genusScientistForm.createdAt) }}</div>
            </div>
        </div>

       <div class="col-span-4">
       <div>
            {{ form_label(genusScientistForm.author) }}
            <div class="mt-2">
                {{ form_widget(genusScientistForm.author) }}
            </div>
            <div class="text-theme-6 mt-2"> {{ form_errors(genusScientistForm.author) }}</div>
        </div>
    </div>

     
    </div>
{% endmacro %}


<div class="grid grid-cols-12 gap-6">
    <div class="col-span-12 lg:col-span-12 xxl:col-span-12">
        <!-- BEGIN: Form Start -->
        <div class="intro-y box lg:mt-5">
            <div class="flex items-center p-5 border-b border-gray-200 dark:border-dark-5">
                <h2 class="font-medium text-base mr-auto">
                         {{ header_label }}
                </h2>
            </div>
            <div class="p-5">
                {{ form_start(form) }}
                <div class="col-span-12 lg:col-span-12 xxl:col-span-12">
                    <div class="grid grid-cols-12 gap-5">
                        <div class="col-span-12 xl:col-span-3">
                            <div>
                                {{ form_label(form.title) }}
                                <div class="mt-2">
                                    {{ form_widget(form.title) }}
                                </div>
                                <div class="text-theme-6 mt-2"> {{ form_errors(form.title) }}</div>
                            </div>
                        </div>
                          <div class="col-span-12 xl:col-span-3">
                            <div>
                                {{ form_label(form.topic) }}
                                <div class="mt-2">
                                    {{ form_widget(form.topic) }}
                                </div>
                                <div class="text-theme-6 mt-2"> {{ form_errors(form.topic) }}</div>
                            </div>
                        </div>
                            <div class="col-span-12 xl:col-span-3">
                                <div>
                                    {{ form_label(form.price) }}
                                    <div class="mt-2">
                                        {{ form_widget(form.price) }}
                                    </div>
                                    <div class="text-theme-6 mt-2"> {{ form_errors(form.price) }}</div>
                                </div>
                        </div>

                            <div class="col-span-12 xl:col-span-3">
                                <div>
                                    {{ form_label(form.publishedDate) }}
                                    <div class="mt-2">
                                        {{ form_widget(form.publishedDate) }}
                                    </div>
                                    <div class="text-theme-6 mt-2"> {{ form_errors(form.publishedDate) }}</div>
                                </div>
                        </div>
               
                    </div>
                </div>

         <h3>Add BookTags</h3>
        <div class="row js-genus-scientist-wrapper grid grid-cols-12 gap-6" data-prototype="{{ formMacros.printBookTags(form.bookTags.vars.prototype)|e('html_attr') }}" data-index="{{ form.bookTags|length }}">
                <div class="col-span-12 lg:col-span-12 xxl:col-span-12">
                    {% for bookTag in form.bookTags %}
                        {{ dump(bookTag) }}
                        {{ formMacros.printBookTags(bookTag) }}
                    {% endfor %}
                <a href="#" class="js-genus-scientist-add">
                    <span class="fa fa-plus-circle"></span>
                    Add Another Book
                </a>
        </div>
                <div class="col-span-12">
                    <div class="intro-y block sm:flex items-center  h-8 mt-5">
                        <div class="flex items-center sm:ml-auto mt-3 mb-3 sm:mt-0">
                                <a href="{{ path('admin_author') }}" class="button mt-2 w-20 bg-theme-1 text-white ml-3 navigation"> {{button_label}}</a>
                            {{ form_widget(form.submit) }}
                        </div>
                    </div>
                </div>
            </div>
        <!-- END: Form -->
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>